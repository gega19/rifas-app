{
  "name": "rifas-backend",
  "version": "1.0.0",
  "private": true,
  "main": "dist/index.js",
  "scripts": {
    "dev": "tsx watch src/index.ts",
    "build": "tsc && npm run prisma:generate",
    "start": "node dist/index.js",
    "start:prod": "npm run prisma:migrate:deploy || (echo 'Migration failed, continuing anyway...' && npm start)",
    "prisma:generate": "prisma generate",
    "prisma:migrate": "prisma migrate dev",
    "prisma:migrate:deploy": "prisma migrate deploy",
    "prisma:studio": "prisma studio",
    "prisma:seed": "tsx prisma/seed.ts",
    "setup": "npm install && npm run prisma:generate",
    "test": "NODE_ENV=test DATABASE_URL=\"postgresql://postgres:postgres@localhost:5434/rifa_db_test?schema=public\" jest",
    "test:watch": "NODE_ENV=test DATABASE_URL=\"postgresql://postgres:postgres@localhost:5434/rifa_db_test?schema=public\" jest --watch",
    "test:coverage": "NODE_ENV=test DATABASE_URL=\"postgresql://postgres:postgres@localhost:5434/rifa_db_test?schema=public\" jest --coverage"
  },
  "dependencies": {
    "@prisma/client": "^5.19.0",
    "bcryptjs": "^2.4.3",
    "cors": "^2.8.5",
    "express": "^4.18.2"
  },
  "devDependencies": {
    "@types/bcryptjs": "^2.4.6",
    "@types/cors": "^2.8.17",
    "@types/express": "^4.17.21",
    "@types/jest": "^29.5.14",
    "@types/node": "^20.10.0",
    "@types/supertest": "^6.0.3",
    "jest": "^29.7.0",
    "prisma": "^5.19.0",
    "supertest": "^6.3.4",
    "ts-jest": "^29.4.6",
    "tsx": "^4.19.0",
    "typescript": "^5.3.3"
  }
}
